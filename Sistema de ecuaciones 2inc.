#include <iostream>

using namespace std;

int main()
{
    float a,b,c,d,e,f,x,z ;
    cout<<"sistema de ecuaciones de la forma:" <<endl;
    
    cout<<"ax + bz = c" <<endl;
    cout<<"dx + fz = e" <<endl; 
    
    cout<<"dijite el valor de a" <<endl;
    cin>> a;
    cout<<"dijite el valor de b" <<endl;
    cin>> b;
    cout<<"dijite el valor de c" <<endl;
    cin>> c ;
    cout<<"dijite el valor de d " <<endl;
    cin>> d;
    cout<<"dijite el valor de e" <<endl;
    cin>> e;
    cout<<"dijite el valor de f" <<endl;
    cin>> f;
    
    x=(-b*e+f*c)/(-b*d+a*f) ;
    z=(-c*d+a*e)/(-b*d+a*f) ;
    
    cout<<"La solucion del sistema de ecuaciones es" <<endl;
    
    cout<<"x es igual a" <<endl;
    cout<<x <<endl;
    
    cout<<"z es igual a" <<endl;
    cout<<z <<endl;
    
    return 0;
}
